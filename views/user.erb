<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <nav class="nav">
        <div class="nav-left">
          <a class="title" href="/user/<%= @user.to_param %>">
            Perpetuaspotify
          </a>
        </div>
        <div class="nav-right nav-menu">
          <a href="/logout" class="nav-item">
            Log out <%= @user.user_name %>
          </a>
        </div>
      </nav>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <h2 class="subtitle">Recently Played</h2>
        <ul class="recently-played-list tracks-list">
          <% @tracks.each do |track| %>
            <li>
              <%= erb :track, locals: { track: track } %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="column">
        <h2 class="subtitle">
          Recommended Tracks &mdash;
          <a href="#create-playlist-modal" class="js-trigger-modal">Create Playlist</a>
        </h2>
        <ul class="recommendations-list tracks-list">
          <% @recommendations.each do |track| %>
            <li>
              <%= erb :track, locals: { track: track } %>
            </li>
          <% end %>
        </ul>
        <div class="modal" id="create-playlist-modal">
          <div class="modal-background"></div>
          <div class="modal-card">
            <header class="modal-card-head">
              <p class="modal-card-title">Create Playlist</p>
              <button class="modal-close js-modal-close"></button>
            </header>
            <form>
              <section class="modal-card-body">
                <div class="field">
                  <label class="label" for="playlist-name">Playlist name</label>
                  <p class="control">
                    <input autofocus value="<%= @playlist_name %>" class="input js-playlist-name-input js-modal-focus" type="text" id="playlist-name">
                  </p>
                </div>
              </section>
              <footer class="modal-card-foot">
                <button class="button" type="submit">
                  Save
                </button>
                <button class="button is-link js-modal-close" type="button">
                  Cancel
                </button>
              </footer>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
