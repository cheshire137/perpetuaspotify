<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <nav class="nav">
        <div class="nav-left">
          <a class="title" href="/user/<%= @user.to_param %>">
            Perpetuaspotify
          </a>
        </div>
        <div class="nav-right nav-menu">
          <a href="/logout" class="nav-item">
            Log out <%= @user.user_name %>
          </a>
        </div>
      </nav>
    </div>
  </div>
</section>
<section class="section">
  <div class="container content">
    <ul>
      <% @recently_played.each do |track| %>
        <li>
          <a href="<%= track.url %>" target="_blank" rel="noopener noreferrer"><%= track.name %></a>
          by
          <% track.artists.each_with_index do |artist, i| %>
            <a href="<%= artist.url %>" target="_blank" rel="noopener noreferrer"><%= artist.name %></a><%= ',' if i < track.artist_count - 1 %>
          <% end %>
          <br><%= track.formatted_played_at %>
          <br>
          <% track.audio_features.each do |feature, value| %>
            <%= feature %>: <%= value %> &middot;
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</section>
