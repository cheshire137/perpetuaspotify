<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <nav class="nav">
        <div class="nav-left">
          <a class="title" href="/user/<%= @user.to_param %>">
            Perpetuaspotify
          </a>
        </div>
        <div class="nav-right nav-menu">
          <a href="/logout" class="nav-item">
            Log out <%= @user.user_name %>
          </a>
        </div>
      </nav>
    </div>
  </div>
</section>
<section class="section">
  <div class="container">
    <% if @error %>
      <div class="notification is-danger">
        <button class="delete js-hide-notification"></button>
        <%= @error %>
      </div>
    <% end %>
    <% if @playlist_name && @playlist_url %>
      <div class="notification is-success">
        <button class="delete js-hide-notification"></button>
        Created playlist
        <a href="<%= @playlist_url %>" target="_blank" rel="noopener noreferrer"><%= @playlist_name %></a>!
      </div>
    <% end %>
    <div class="columns">
      <div class="column">
        <h2 class="subtitle">Recently Played</h2>
        <ul class="recently-played-list tracks-list">
          <% @tracks.each do |track| %>
            <li>
              <%= erb :track, locals: { track: track } %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="column">
        <h2 class="subtitle">
          Recommended Tracks &mdash;
          <a href="#create-playlist-modal" class="js-trigger-modal">Create Playlist</a>
        </h2>
        <ul class="recommendations-list tracks-list">
          <% @recommendations.each do |track| %>
            <li>
              <%= erb :track, locals: { track: track } %>
            </li>
          <% end %>
        </ul>
        <div class="modal" id="create-playlist-modal">
          <div class="modal-background"></div>
          <div class="modal-card">
            <header class="modal-card-head">
              <p class="modal-card-title">Create Playlist</p>
              <button class="modal-close js-modal-close"></button>
            </header>
            <form action="/playlists" method="POST">
              <% @recommendations.each do |track| %>
                <input type="hidden" name="track_uris[]" value="<%= track.uri %>">
              <% end %>
              <section class="modal-card-body">
                <div class="field">
                  <label class="label" for="playlist-name">Playlist name</label>
                  <p class="control">
                    <input name="name" autofocus value="<%= @new_playlist_name %>" class="input js-playlist-name-input js-modal-focus" type="text" id="playlist-name">
                  </p>
                </div>
              </section>
              <footer class="modal-card-foot">
                <button class="button" type="submit">
                  Save
                </button>
                <button class="button is-link js-modal-close" type="button">
                  Cancel
                </button>
              </footer>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
